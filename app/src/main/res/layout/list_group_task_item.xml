<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:id="@+id/task_item_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <CheckBox
                android:id="@+id/cb_task_complete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="10dp" />

            <TextView
                android:id="@+id/tv_task_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="操作系统"
                android:layout_toRightOf="@id/cb_task_complete"
                android:textSize="16sp"/>

            <CheckBox
                android:id="@+id/cb_task_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"
                style="@style/StarCheckBox"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_item_delete"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="#FF0000"
            android:text="删除"
            android:textColor="#FFF"
            android:textSize="16sp"
            android:gravity="center"/>
    </LinearLayout>

</android.support.v7.widget.CardView>