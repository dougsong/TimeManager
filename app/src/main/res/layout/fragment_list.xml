<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_list_group"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.songzheng.timemanager.ui.ItemRemoveRecyclerView
            android:id="@+id/rv_list_group_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </android.support.v4.widget.SwipeRefreshLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_add_list_group"
        android:layout_gravity="bottom|center"
        android:layout_margin="16dp"
        android:src="@drawable/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backgroundTint="#3189D5"
        app:rippleColor="#3189D5"/>

</android.support.design.widget.CoordinatorLayout>
