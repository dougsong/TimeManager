<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBECF0">

    <ImageView
        android:id="@+id/iv_login_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ci_user_login_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/nav_icon" />

    <EditText
        android:id="@+id/et_user_login_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/ci_user_login_image"
        android:layout_marginTop="15dp"
        android:background="#FFF"
        android:hint="账号/手机号/邮箱"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="#BBBBBC"/>

    <EditText
        android:id="@+id/et_user_login_password"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/et_user_login_name"
        android:layout_marginTop="1dp"
        android:background="#FFF"
        android:gravity="center"
        android:hint="密码"
        android:inputType="textPassword"
        android:textColor="#BBBBBC"
        android:textSize="16sp" />

    <Button
        android:id="@+id/bt_user_login"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_below="@id/et_user_login_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="#00ABE0"
        android:text="登录"
        android:textSize="16sp"
        android:textColor="#FFF"/>

    <TextView
        android:id="@+id/tv_forget_pwd"
        android:background="#EBECF0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="忘记密码？"
        android:textColor="#00ABE0"
        android:layout_below="@id/bt_user_login"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/tv_user_register"
        android:background="#EBECF0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新用户注册"
        android:textColor="#00ABE0"
        android:layout_below="@id/bt_user_login"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"/>

    <ProgressBar
        android:id="@+id/pb_login"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/et_user_login_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:visibility="invisible" />

</RelativeLayout>
